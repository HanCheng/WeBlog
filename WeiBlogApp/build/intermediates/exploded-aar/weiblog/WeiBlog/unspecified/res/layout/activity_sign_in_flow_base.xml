<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    tools:context=".signinflow.ui.SignInFlowBaseActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/flow_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="Hi. What's your name? "
        />
    
    <TextView
        android:id="@+id/flow_sub_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="Don't worry, we'll never display it publicly"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/first_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/darker_gray"
        tools:text="Full Name"
        />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/WeiBlogEditTextTheme"
            android:drawableRight="@mipmap/check_circle"
            android:drawableEnd="@mipmap/check_circle"
            />

    </LinearLayout>

</RelativeLayout>
